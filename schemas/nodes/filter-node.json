{
  "type": "object",
  "properties": {
    "type": {
      "const": "filter"
    },
    "config": {
      "description": "Configuration for filter nodes",
      "properties": {
        "context": {
          "anyOf": [
            {
              "additionalProperties": {
                "type": "string"
              },
              "type": "object"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Map of variable names to node names for context",
          "title": "Context"
        },
        "input_schema": {
          "anyOf": [
            {
              "additionalProperties": true,
              "type": "object"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Expected input schema for validation",
          "title": "Input Schema"
        },
        "output_schema": {
          "anyOf": [
            {
              "additionalProperties": true,
              "type": "object"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Expected output schema for validation",
          "title": "Output Schema"
        },
        "condition": {
          "description": "Jinja2 condition expression",
          "title": "Condition",
          "type": "string"
        },
        "field": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
