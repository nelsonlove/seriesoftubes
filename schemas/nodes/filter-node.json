      "description": "Input schema for filter nodes",
      "readOnly": true,
      "additionalProperties": true,
      "properties": {
        "items": {
          "description": "Array of items to filter",
          "items": {},
          "title": "Items",
          "type": "array"
        },
        "filter_context": {
          "additionalProperties": true,
          "description": "Additional context for filter conditions",
